<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RideHailingApp.Views.ResetPassword"
             xmlns:effects="clr-namespace:RideHailingApp.Effects"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <ScrollView BackgroundColor="#FFFFFF">
            <StackLayout>
                <Grid VerticalOptions="Fill">

                    <StackLayout BackgroundColor="#FFFFFF" Padding="36, 36, 0, 0">
                        <ImageButton Source="backbutton.png" HeightRequest="42" WidthRequest="42" x:Name="NavbackBtn" 
                                     Clicked="NavbackBtn_Clicked"  HorizontalOptions="Start"/>
                    </StackLayout>
                </Grid>
                <StackLayout Spacing="-24" Padding="36, 0">
                    <Label Text="Reset your&#10;password" FontSize="30" TextColor="#0E0E24" Padding="0, 57"/>
                    <Label Text="A password reset link has been sent to gemini5**@yahoo.com, follow the instructions to reset password." 
                           FontSize="15" TextColor="#0E0E24"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>